@model blogAfonina.ViewModels.Blog.PostItemViewModel;
@{
    ViewData["Title"] = "New post";
}
<form asp-action="AddPost" method="post">
    <div class="card-body">

        <div class="form-group bmd-form-group">
            <label asp-for="Title" class="bmd-label-floating"></label>
            <input asp-for="Title" class="form-control">
        </div>

        <div class="form-group bmd-form-group">
            <label asp-for="Data" class="bmd-label-floating"></label>
            <input asp-for="Data" class="form-control">
        </div>

        <div class="card-footer justify-content-center">
            <button type="submit" class="btn btn-primary btn-fill btn-lg">Post</button>
        </div>

    </div>
</form>

