@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="demo" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./img/bokeh.jpg" alt="First slide">
                <div class="carousel-caption carousel-text">
                    <h1 class="display-4">This is my blog :)</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="./img/bubbles.jpg" alt="Second slide">
                <div class="carousel-caption carousel-text">
                    <h3>I don't know what to write about yet</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="./img/hubble.jpg" alt="Third slide">
                <div class="carousel-caption carousel-text">
                    <h3>Today I offer you nothing. Tomorrow? Who knows...</h3>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>
